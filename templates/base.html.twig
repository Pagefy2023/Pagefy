    </head>
    <body>

    <section id="header">
        <a href="{{ path('app_pagefy') }}" ><img src="{{ asset('assets/img/navbar_logo_pagefy.svg') }}"  width="120px" alt="Logo Pagefy"></a>

        <div>
            <ul id="navbar">
            
                <li><a href="{{path('app_pagefy')}}" class="active" >Home</a></li>
                <li><a href="{{path('livre_search')}}"><i class="bi bi-search"></i> Recherche </a></li>
                <li><a href="{{ path('app_categorie_search') }}">Categories</a></li>
                <li><a href="#">Abonnement</a></li>
                {% if app.user %}
                {% if is_granted('ROLE_ADMIN')  %}
                    <li><a href="{{path('app_administrator')}}">Admin</a></li>
                {% endif %}
                    <li><a href="{{path('app_logout')}}">Déconnexion</a></li>
                {% else %}
                    <li><a href="{{path('app_login')}}">Connexion</a></li>
                {% endif %}
                <a href="#" id="close"><i class="bi bi-x-lg"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="#"><img  src="{{asset('assets/img/library.png')}}" width="24px" alt=""></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>


        {% block body %}{% endblock %}

        <footer class="section-p1">
            <div class="col">
                <a href="{{ path('app_pagefy') }}" ><img class="logo" src="{{ asset('assets/img/navbar_logo_pagefy.svg') }}"  width="120px" alt="Logo Pagefy"></a>
                <h4>Contact</h4>
                <p><strong>Adresse: </strong> 19 avenue de la Victoire.</p>
                <p><strong>Telephone: </strong> 0789654212</p>
                <p><strong>Telephone: </strong> 10:00 - 18:00, Lundi - Vendredi</p>
            </div>

            <div class="col">
                <h4>A propos</h4>
                <a href="{{path('aPropos_pagefy')}}">A propos de nous</a>
                <a href="{{path('privacyPolicy_pagefy')}}">Politique de confidentialité</a>
