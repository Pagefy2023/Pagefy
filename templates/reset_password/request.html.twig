{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="title">Réinitialiser votre mot de passe</h1>

    <div class="position">
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
    </div>

    <div class="position">
        <small>
            Saisissez votre adresse e-mail, et nous vous enverrons un
            lien pour réinitialiser votre mot de passe.
        </small>
    </div>
    
    <div class="position">
        <button class="btnb">Envoyer l'e-mail de réinitialisation du mot de passe</button>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
